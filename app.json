{
    "expo": {
        "name": "CoupleTracker",
        "slug": "CoupleTracker",
        "scheme": "coupletracker",
        "version": "1.0.0",
        "orientation": "portrait",
        "icon": "./assets/HeartHourglass.png",
        "userInterfaceStyle": "light",
        "newArchEnabled": true,
        "splash": {
            "image": "./assets/HeartHourglass.png",
            "resizeMode": "contain",
            "backgroundColor": "#ffffff"
        },
        "ios": {
            "supportsTablet": true,
            "infoPlist": {
                "NSPhotoLibraryUsageDescription": "A képek kiválasztásához a fotógalériából.",
                "NSUserTrackingUsageDescription": "Szükséges az értesítésekhez."
            }
        },
        "android": {
            "adaptiveIcon": {
                "foregroundImage": "./assets/adaptive-icon.png",
                "backgroundColor": "#ffffff"
            },
            "edgeToEdgeEnabled": true,
            "permissions": [
                "READ_EXTERNAL_STORAGE",
                "WRITE_EXTERNAL_STORAGE",
                "NOTIFICATIONS"
            ]
        },
        "web": {
            "favicon": "./assets/favicon.png"
        },
        "plugins": [
            "expo-router",
            "expo-image-picker",
            "expo-notifications"
        ]
    }
}